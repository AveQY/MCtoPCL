<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="TOP_LEFT" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aweqy.mctopcl.CloudStorageDialogController"
      style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 4;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="添加云存储配置" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="配置名称:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
        <TextField fx:id="configName" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 6;"/>

        <Label text="存储端点:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
        <TextField fx:id="endpoint" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 6;"/>

        <Label text="用户名:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
        <TextField fx:id="username" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 6;"/>

        <Label text="密码:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
        <TextField fx:id="password" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 6;"/>

        <Label text="WebDav路径:" GridPane.columnIndex="0" GridPane.rowIndex="4"
               style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
        <TextField fx:id="path" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 6;"/>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button text="取消" onAction="#onCancel" 
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-border-radius: 4;"/>
        <Button text="确定" onAction="#onConfirm" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-border-radius: 4;"/>
    </HBox>

</VBox>
