<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ProgressBar?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aweqy.mctopcl.HelloController" 
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- 标题区域 -->
    <VBox alignment="CENTER" spacing="5.0" style="-fx-padding: 10 0 10 0;">
        <Label text="MC存档管理工具" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <Label fx:id="statusLabel" text="请选择MC存档目录" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
    </VBox>
    
    <Separator/>
    
    <!-- 版本选择区域 -->
    <HBox spacing="15.0" alignment="CENTER_LEFT">
        <Button text="选择版本" onAction="#onSelectVersion" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-border-radius: 4;"/>
        <TextField fx:id="directoryPath" editable="false" prefWidth="500" 
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 4; -fx-padding: 8;"/>
    </HBox>
    
    <!-- 文件列表和云存档区域 -->
    <HBox spacing="20.0">
        <!-- 本地文件列表区域 -->
        <VBox spacing="10.0" prefWidth="320">
            <Label text="本地文件列表" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <ListView fx:id="fileList" prefHeight="350" prefWidth="320" 
                      style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3); -fx-cell-size: 36; -fx-font-size: 14px; -fx-padding: 5;"/>
        </VBox>
        
        <!-- 云存档区域 -->
        <VBox spacing="10.0" prefWidth="320">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="云存档" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Button text="配置" onAction="#onConfigureCloudStorage" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 4 8; -fx-border-radius: 4;"/>
                <Button text="刷新" onAction="#onRefreshCloudFiles" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 4 8; -fx-border-radius: 4;"/>
            </HBox>
            <ListView fx:id="cloudFileList" prefHeight="350" prefWidth="320" 
                      style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3); -fx-cell-size: 36; -fx-font-size: 14px; -fx-padding: 5;"/>
        </VBox>
    </HBox>
    
    <!-- 联机按钮 -->
    <HBox spacing="15.0" alignment="CENTER_LEFT">
        <Button text="联机" onAction="#onConnectOnline" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-border-radius: 4;"/>
        <Label fx:id="onlineStatusLabel" text="未连接" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
    </HBox>
    
    <!-- 进度条区域 -->
    <VBox fx:id="progressBox" spacing="10.0" visible="false">
        <Label text="压缩进度" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <ProgressBar fx:id="progressBar" prefWidth="660" progress="0" 
                     style="-fx-accent: #4CAF50; -fx-background-color: #e0e0e0; -fx-background-radius: 4; -fx-border-radius: 4;"/>
    </VBox>
    
    <!-- 作者标注 -->
    <Label text="by 不会吸猫" style="-fx-font-size: 12px; -fx-text-fill: #999; -fx-padding: 10 0 0 0;"/>
</VBox>
